<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- Include Spring Boot's default configuration -->
    <include resource="org/springframework/boot/logging/logback/defaults.xml"/>
    
    <!-- Define properties -->
    <springProfile name="!prod">
        <property name="LOG_LEVEL" value="INFO"/>
        <property name="LOG_FILE" value="logs/spring-kafka-pro.log"/>
    </springProfile>
    
    <springProfile name="prod">
        <property name="LOG_LEVEL" value="WARN"/>
        <property name="LOG_FILE" value="${LOG_FILE:-/var/log/spring-kafka-pro/application.log}"/>
    </springProfile>

    <!-- Console appender for development -->
    <springProfile name="!prod">
        <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
            <encoder>
                <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level [%X{traceId:-},%X{spanId:-}] [%logger{36}] - %msg%n</pattern>
            </encoder>
        </appender>
    </springProfile>

    <!-- File appender for all environments -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_FILE}</file>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level [%X{traceId:-},%X{spanId:-}] [%logger{36}] - %msg%n</pattern>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${LOG_FILE}.%d{yyyy-MM-dd}.%i.gz</fileNamePattern>
            <maxFileSize>100MB</maxFileSize>
            <maxHistory>30</maxHistory>
            <totalSizeCap>3GB</totalSizeCap>
        </rollingPolicy>
    </appender>

    <!-- Async appender for better performance -->
    <appender name="ASYNC_FILE" class="ch.qos.logback.classic.AsyncAppender">
        <appender-ref ref="FILE"/>
        <queueSize>1024</queueSize>
        <discardingThreshold>0</discardingThreshold>
        <includeCallerData>false</includeCallerData>
    </appender>

    <!-- JSON appender for production log aggregation -->
    <springProfile name="prod">
        <appender name="JSON" class="ch.qos.logback.core.rolling.RollingFileAppender">
            <file>${LOG_FILE}.json</file>
            <encoder class="net.logstash.logback.encoder.LoggingEventCompositeJsonEncoder">
                <providers>
                    <timestamp/>
                    <logLevel/>
                    <loggerName/>
                    <message/>
                    <mdc/>
                    <arguments/>
                    <stackTrace/>
                </providers>
            </encoder>
            <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
                <fileNamePattern>${LOG_FILE}.json.%d{yyyy-MM-dd}.%i.gz</fileNamePattern>
                <maxFileSize>100MB</maxFileSize>
                <maxHistory>30</maxHistory>
                <totalSizeCap>3GB</totalSizeCap>
            </rollingPolicy>
        </appender>
    </springProfile>

    <!-- Logger configurations -->
    <logger name="com.company.kafka" level="INFO"/>
    <logger name="org.springframework.kafka" level="WARN"/>
    <logger name="org.apache.kafka" level="WARN"/>
    
    <!-- Debug loggers for development -->
    <springProfile name="dev">
        <logger name="com.company.kafka" level="DEBUG"/>
        <logger name="org.springframework.kafka" level="INFO"/>
    </springProfile>

    <!-- Kafka-specific loggers -->
    <logger name="org.apache.kafka.clients.consumer.ConsumerConfig" level="INFO"/>
    <logger name="org.apache.kafka.clients.producer.ProducerConfig" level="INFO"/>
    <logger name="org.apache.kafka.common.utils.AppInfoParser" level="WARN"/>

    <!-- Root logger -->
    <root level="${LOG_LEVEL}">
        <springProfile name="!prod">
            <appender-ref ref="CONSOLE"/>
        </springProfile>
        <appender-ref ref="ASYNC_FILE"/>
        <springProfile name="prod">
            <appender-ref ref="JSON"/>
        </springProfile>
    </root>
</configuration>
